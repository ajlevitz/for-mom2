<h1><%= @prompt.question %></h1>

<h2>View responses</h2>
<% if @prompt.responses.length == 0 %>
  <p><i>There hasn't yet been a response to this question</i></p>
<% else %>
  <% @prompt.responses.each do |response| %>
    <p><strong><%= response.submitter %></strong></p>
    <p><%= response.comments %></p>
    <p><%= response.created_at %></p>
  <% end %>
<% end %>

<h2>Add a response</h2>
<%= form_for(Response.new) do |f| %>
  <p>
    <%= f.label :submitter %><br />
    <%= f.text_field :submitter %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_field :comments %>
  </p>
  <p>
    <%= f.label :school_id %><br />
    <%= f.text_field :school_id, :value => @school_id %>
  </p>
  <p>
    <%= f.label :prompt_id %><br />
    <%= f.text_field :prompt_id, :value => @prompt_id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "View info for #{@prompt.school.name}", school_path(@prompt.school.id) %>
