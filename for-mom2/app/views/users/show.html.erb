<h1><%= @user.name %></h1>
<h3><%= @user.high_school %>, class of <%= @user.grad_year %></h3>

<h2>Schools:</h2>
  <ul>
    <% @user.schools.each do |school| %>
      <li><%= link_to school.name, school_path(school) %></li>
    <% end %>
  </ul>

<h2> Add a school </h2>
<%= form_for(@user, html: {multipart:true}) do |f| %>
  <p>
    <%= f.label :school_list %><br />
    <%= f.text_field :school_list %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<br/>

<%= link_to "See all users", users_path %>
